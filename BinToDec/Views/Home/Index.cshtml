@model BinToDec.Models.BinToDecModel

@{
    ViewData["Title"] = "BinToDec";
}

<div class="text-center">
    <h1 class="display-4">Binary to Decimal</h1>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form form asp-controller="Home" asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Binary" class="control-label"></label>
                <input asp-for="Binary" type="number" class="form-control" placeholder="Enter binary" name="binary" maxlength="8">
                <span asp-validation-for="Binary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Decimal</label>
                <input type="number" class="form-control" placeholder="Decimal" value="@Html.DisplayFor(model => model.Decimal)" readonly="readonly">
            </div>
            <button type="submit" class="btn btn-primary">Convert</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}